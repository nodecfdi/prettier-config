{
  "name": "@nodecfdi/prettier-config",
  "description": "Configuraci√≥n Prettier para proyectos NodeCfdi",
  "version": "1.4.0",
  "type": "module",
  "module": "./build/base.js",
  "types": "./build/base.d.ts",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./build/base.d.ts",
        "default": "./build/base.js"
      }
    },
    "./pkg": {
      "import": {
        "types": "./build/pkg.d.ts",
        "default": "./build/pkg.js"
      }
    }
  },
  "scripts": {
    "prepare": "is-in-ci || husky",
    "typecheck": "tsc --noEmit",
    "clean": "del-cli build",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "prebuild": "pnpm run typecheck",
    "build": "pnpm run clean && tsup-node",
    "release": "np",
    "version": "pnpm run build && pnpm run changelog"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@nodecfdi/tsconfig": "^1.7.3",
    "auto-changelog": "^2.5.0",
    "del-cli": "^6.0.0",
    "husky": "^9.1.7",
    "is-in-ci": "^1.0.0",
    "np": "^10.1.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "prettier": "^3.4.2"
  },
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/nodecfdi/prettier-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodecfdi/prettier-config.git"
  },
  "bugs": {
    "url": "https://github.com/nodecfdi/prettier-config/issues"
  },
  "keywords": [
    "prettier",
    "nodecfdi",
    "shared",
    "config"
  ],
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.1",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "auto-changelog": {
    "template": "keepachangelog",
    "hide-credit": true
  },
  "np": {
    "message": "chore(release): :tada: %s",
    "tag": "latest",
    "branch": "main",
    "yolo": true
  },
  "tsup": {
    "entry": [
      "./src/base.ts",
      "./src/pkg.ts"
    ],
    "outDir": "./build",
    "clean": false,
    "format": "esm",
    "dts": true,
    "target": "esnext"
  }
}
